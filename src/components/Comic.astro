<style lang='scss'>
  .the-comic {
    width: 500px;
    margin: auto;
  }

  .top-section {
    width: 500px;
    display: flex;
    margin: auto;
    margin-top: 3rem;
  }

  .comic-info-container {
    height: auto;
    width: 500px;
    margin: auto;
    margin-right: 1rem;
    margin-bottom: 1.5rem;
  }

  .comic-title {
    font-size: 2rem;
    font-weight: 700;
  }

  .comic-description {
    font-size: 1.25rem;
    line-height: 0;
  }

  .blog-button {
    cursor: pointer;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;

    width: 3.5rem;
    height: 3.5rem;

    background: #ffffff;

    border: 1px solid #000000;

    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.25);
    border-radius: 5px;

    // arrow decoration
    font-size: x-large;

    flex: none;
    order: 1;
    flex-grow: 0;

    transition: all 100ms ease-out;
    &:hover {
      transform: rotate(8deg);
    }
    &:active {
      background-color: #0099ff;
    }
  }
</style>
