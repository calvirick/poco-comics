---
import Hamburger from "./Hamburger.astro";
import NavButton from "./NavButton.astro";
---

<header class='primary-header'>
  <div class='container'>
    <div class='nav-wrapper'>
      <a href='/' class='logo'><img src='/poco-logo.png' alt='poco logo' /></a>
      <Hamburger />
      <nav class='primary-navigation' id='primary-navigation'>
        <ul aria-label='Primary' role='list' class='nav-list'>
          <NavButton label='About' href='/about' />
          <NavButton label='FAQ' href='/faq' />
          <NavButton label='Discord' href='#' inverted='true' />
          <NavButton label='Contact' href='#' inverted='true' />
        </ul>
      </nav>
    </div>
  </div>

  <style lang='scss'>
    :root {
      --size-100: 0.25rem;
      --size-200: 0.5rem;
      --size-300: 0.75rem;
      --size-400: 1rem;
      --size-500: 1.5rem;
      --size-600: 2rem;
      --size-700: 3rem;
      --size-800: 4rem;
      --size-900: 5rem;
    }

    .primary-header {
      padding-top: 1rem;
    }

    .container {
      --clr-poco-blue: #0099ff;

      --max-width: 1110px;
      --container-padding: 1rem;
      width: min(var(--max-width), 100% - (var(--container-padding) * 2));
      margin-inline: auto;

      color: white;
      background: var(--clr-poco-blue);
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.25);
      padding: 0.5rem;
    }

    .nav-wrapper {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    @media (max-width: 50em) {
      .primary-header[data-overlay]::before {
        content: "";
        position: fixed;
        inset: 0;
        /* height: 100vh; */
        background-image: linear-gradient(rgb(0 0 0 / 0), rgb(0 0 0 / 0.8));
      }
      .primary-navigation {
        position: absolute;
        z-index: 1;

        padding: var(--size-500);
        inset: 7rem var(--size-400) auto;
        max-width: 25rem;
        margin-left: auto;

        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.744);
        border-radius: var(--size-100);
        box-shadow: 0 0 0.75em rgb(0, 0, 0, 0.05);
        transform: translateX(500px);
        opacity: 0;
        transition: all 100ms, opacity 0.3s;
      }

      .primary-navigation[data-visible] {
        display: block;
        opacity: 1;
        transform: translateX(0px);
      }
    }

    .nav-list {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      padding-right: 20px;
    }

    img {
      min-width: 140px;
    }

    // mobile version
    @media (max-width: 50em) {
      .primary-navigation {
        display: none;
      }

      .nav-list {
        display: grid;
        gap: var(--size-500);
        text-align: center;
      }

      .blue-navbar {
        background: #0099ff;
        width: 100%;
      }

      img {
        width: 2rem;
      }
    }
  </style>
</header>
